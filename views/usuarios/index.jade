extends ../layout

block content
    h1 Usuarios
    a(href="/usuarios/create", class="btn btn-success") Cadastro de usuários
    br
    br
    if lista.length > 0
        div(class="table-responsive")
            table(class="table table-striped table-condensed table-hover")
                thead
                    tr
                        th ID
                        th Nome
                        th Sobronome
                        th E-mail
                        th Data de Cadastro
                        th Ações
                tbody
                    each valor in lista
                        tr
                            td #{valor._id}
                            td #{valor.nome}
                            td #{valor.sobrenome}
                            td #{valor.email}
                            td #{moment(valor.data_cadastro).format('DD/MM/YYYY HH:mm:ss')}
                            td 
                                a(href="/usuarios/show/#{valor._id}", class="btn btn-info btn-xs faa-parent animated-hover" data-toggle="tooltip" data-placement="auto" title="Vizualizar")
                                    i(class="fa fa-search fa-fw faa-wrench faa-slow")
                                a(href="/usuarios/edit/#{valor._id}", class="btn btn-warning btn-xs faa-parent animated-hover margin-l" data-toggle="tooltip" data-placement="auto" title="Alterar")
                                    i(class="fa fa-pencil fa-fw faa-wrench faa-slow")
    else
        p Nenhum registro encontrado!
                            i(class="fa fa-pencil fa-fw faa-wrench faa-slow")
block script
    if messages.info
        script.
            $(document).ready(function(){
                $('.alert').hide();
                $.notify('<strong>#{messages.info}</strong>', 'success');
            });
    if messages.erro
        script.
            $(document).ready(function(){
                $('.alert').hide();
                $.notify('<strong>#{messages.erro}</strong>', 'erro');
            });
    script.
        $(document).ready(function(){
            $('[data-toggle="tooltip"]').tooltip();   
        });