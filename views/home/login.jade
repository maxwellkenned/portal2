extends ../layout

block content
  div(id="page-login" )
    div(class="container-fluid")
      div(class="container-fluid row flex-items-sm-middle" )
        div(id="logo" class="col-xs-offset-1 col-xs-10 col-sm-offset-0 col-sm-6 col-md-offset-1 col-md-6 vcenter")
          img(src="/images/logo/cloud1.png" class="img-fluid align-middle")
        div(id="login" class="col-xs-12 col-sm-offset-1 col-sm-5 col-md-3 col-md-offset-1" style="margin-right:0px; padding:0px")
          div(id="loginbox")
            div(class="panel panel-info ")
              div(class="panel-heading")
                div(class="panel-title")
                  i(class="fa fa-cloud fa-fw")
                  | Ceu.Cloud | Login
              div(style="padding-top:30px" class="panel-body")
                form(id="loginform" method="POST" action="/" class="form-horizontal" role="form")
                  div(style="margin-bottom: 25px" class="input-group")
                    span(for="login-username" class="input-group-addon")
                      i(class="glyphicon glyphicon-user")
                    input(id="login-username" type="text" class="form-control" name="email" value="" placeholder="E-mail" autofocus required)
                  div(style="margin-bottom: 5px" class="input-group")
                    span(for="login-password" class="input-group-addon")
                      i(class="glyphicon glyphicon-lock")
                    input(id="login-password" type="password" class="form-control " name="senha" placeholder="Senha")
                  br
                  br
                  div(style="margin-top:10px" class="form-group col-xs-12 col-sm-12 col-md-12")
                    div(class="col-xs-offset-1 col-sm-offset-1 col-md-offset-1")
                      button(id="btn-login" class="btn btn-login btn-block") Login
                  div(class="form-group")
                      div(class="col-xs-12 col-md-12 col-md-12 text-center")
                        h4
                          div(style="border-top: 1px solid#888; padding-top:15px;") NÃ£o tem uma conta? 
                            br
                            a(href="/registrar" onClick="$('#loginbox').hide(); $('#signupbox').show()") Crie uma agora.                      
block script
  script(src='/js/login/validar.js')
  script.
  if messages.erro
    each msg in messages.erro   
      script.
        $(document).ready(function(){
          $.notify('#{msg}', 'error');
        });
  if messages.info
    script.
      $(document).ready(function(){
        $.notify('#{messages.info}', 'success');
      });