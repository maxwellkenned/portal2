nav(class="navbar navbar-default navbar-fixed-top col-xs-12 col-sm-12 col-md-12")
        div(class="navbar-header")
            button(type="button", class="navbar-toggle collapsed", data-toggle="collapse", data-target="#navbar", aria-expanded="false", aria-controls="navbar", onclick="menuMobile(this)")
                span(class="sr-only") Toggle navigation
                span(class="bar1 icon-bar1")
                span(class="bar2 icon-bar1")
                span(class="bar3 icon-bar1")
            a(class="navbar-brand faa-parent animated-hover", href="/")
                i(class="fa fa-share-alt fa-fw faa-tada faa-slow" aria-hidden="true")
                i(class="fa fa-cloud-upload fa-fw faa-tada faa-slow" aria-hidden="true")
                |Ceu.Cloud
        div(id="navbar" class="navbar-collapse collapse")
            ul(class="nav navbar-nav")
                li
                    a(href="/", class="faa-parent animated-hover")
                        i(class="fa fa-home fa-fw faa-wrench faa-slow") 
                        |Home
                li
                    a(href="/contatos", class="faa-parent animated-hover")
                        i(class="fa fa-list fa-fw faa-wrench faa-slow")
                        |Contatos
                if session.tipo_user == 3
                    li(role="separator", class="divider divisor")  
                    li 
                        a(href="/usuarios", class="faa-parent animated-hover") 
                            i(class="fa fa-user fa-fw faa-wrench faa-slow")
                            |Administrar usuarios
                li(role="separator", class="divider divisor")
                li(class="hidden-md-up")
                    a(class="dropdown-item" href="/u/perfil") 
                        i(class="fa fa-user fa-fw faa-flash")
                        | #{session.nome}
                    a(href="/sair", class="dropdown-item faa-parent animated-hover")
                            i(class="fa fa-sign-out fa-fw faa-flash")
                            | Sair
            ul(class="nav navbar-nav navbar-right align-middle hidden-sm-down")
                li(class="nav-item dropdown")
                    a(class="nav-link dropdown-toggle" id="supportedContentDropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false")
                        i(class="fa fa-user fa-fw fa-4x")
                    div(class="dropdown-menu" aria-labelledby="supportedContentDropdown")
                        a(class="dropdown-item" href="/u/perfil")
                            i(class="fa fa-user fa-fw faa-flash")
                            | #{session.nome}
                        div(class="dropdown-divider")
                        a(href="/sair", class="dropdown-item faa-parent animated-hover")
                            i(class="fa fa-sign-out fa-fw faa-flash")
                            | Sair

